<odoo>

<!-- Add this in your custom module's XML file (e.g., report_template.xml) -->
<template id="report_project_report">

    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <div class="page">
                <h2>Custom Report</h2>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.custom_data.items()" t-as="item">
                            <tr>
                                <td><t t-esc="item[0]"/></td>
                                <td><t t-esc="item[1]"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>



