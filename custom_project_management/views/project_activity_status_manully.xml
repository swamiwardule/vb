<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_wizard_form" model="ir.ui.view">
        <field name="name">report.wizard.form</field>
        <field name="model">report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Wizard">
                <sheet>
                    <group>
                        <field name="project_info_id"/>
                        <field name="project_tower_id" domain="[('project_id', '=', project_info_id)]"/>
                        <field name="from_date"/>
                        <field name="to_date"/>
                        <field name="status"/>
                    </group>
                    <footer>
                        <button name="generate_graph_report" type="object" string="Generate Graph Report" class="oe_highlight"/>
                        <button name="generate_report" type="object" string="Generate Report" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_report_wizard" model="ir.actions.act_window">
        <field name="name">Report Wizard</field>
        <field name="res_model">report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <record id="manually_set_flag_wizard" model="ir.ui.view">
        <field name="name">manually.set.flag.form</field>
        <field name="model">manually.set.flag.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="image" widget="image" class="oe_avatar" nolabel="1"/>
                <group>
                    <field name="description" required="True"/>
                </group>
                <footer>
                    <button name="submit_flag" string="Submit" type="object" class="btn-primary"/>
                    <button name="close_flag" string="Close" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="manually_flag_wizard_action" model="ir.actions.act_window">
        <field name="name">Close</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">manually.set.flag.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="manually_set_flag_wizard"/>
        <field name="target">new</field>
    </record>

    <record id="manually_set_flag_tree_id" model="ir.ui.view">
        <field name="name">manually.set.flag.tree</field>
        <field name="model">manually.set.flag</field>
        <field name="arch" type="xml">
            <tree string="Projects">
                <field name="project_info_id"/>
                <field name="project_tower_id"/>
                <field name="project_floor_id"/>
                <field name="project_flats_id"/>
                <field name="project_activity_id"/>
                <field name="project_act_type_id"/>

                <!-- Conditionally show custom_checklist_item if it's not empty -->
                <field name="custom_checklist_item" attrs="{'invisible': [('custom_checklist_item', '=', False)]}"/>

                <!-- Show project_check_line_id if custom_checklist_item is empty -->
                <field name="project_check_line_id" attrs="{'invisible': [('custom_checklist_item', '!=', False)]}"/>

                <field name="status"/>
            </tree>

        </field>
    </record>

    <record id="manually_set_flag_tree_form" model="ir.ui.view">
        <field name="name">manually.set.flag.form</field>
        <field name="model">manually.set.flag</field>
        <field name="priority">4</field>
        <field name="arch" type="xml">
            <form string="Projects">
                <header>
                    <field name="is_created" invisible="1"/>
                    <button name="create_flag_counter_manually" string="Create Flag" type="object" class="oe_highlight" data-hotkey="w" attrs="{'invisible': [('is_created', '=', True)]}"/>
                    <button name="%(custom_project_management.manually_flag_wizard_action)d" string="Close" type="action" class="oe_highlight" attrs="{'invisible': [('status', '=', 'close')]}"/>
                    <button name="submit_flag" string="Submit" type="object" class="oe_highlight" attrs="{'invisible': [('status', '=', 'close')]}"/>
                    <button name="open_flag" string="Open" type="object" class="oe_highlight" attrs="{'invisible': [('status', '=', 'open')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,open,submit,close,approver_reject"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="seq_number" readonly="1"/>
                            <field name="project_info_id" attrs="{'readonly': [('status', '!=', 'draft')]}"/>
                            <field name="project_tower_id" domain="[('project_id', '=', project_info_id)]" attrs="{'readonly': [('status', '!=', 'draft')]}"/>
                            <field name="project_floor_id" domain="[('tower_id', '=', project_tower_id)]" attrs="{'readonly': [('status', '!=', 'draft')]}"/>
                            <field name="project_flats_id" domain="[('tower_id', '=', project_tower_id)]" attrs="{'readonly': [('status', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="flag_category" attrs="{'readonly': [('status', '!=', 'draft')]}"/>
                            <!-- <field name="project_activity_id" domain="[('flat_id', '=', project_flats_id), ('floor_id','=',project_floor_id)]" attrs="{'readonly': [('status', '!=', 'draft')]}"/>
                            <field name="project_act_type_id" domain="[('activity_id', '=', project_activity_id)]" attrs="{'readonly': [('status', '!=', 'draft')]}"/> -->
                            <field name="project_activity_id" attrs="{'readonly': [('status', '!=', 'draft')]}"/>
                            <field name="project_act_type_id" attrs="{'readonly': [('status', '!=', 'draft')]}"/>


                            <!-- Conditionally show custom_checklist_item if it's not empty -->
                            <field name="custom_checklist_item" />

                            <!-- Show project_check_line_id if custom_checklist_item is empty -->
                            <field name="project_check_line_id"/>


                            <!-- <field name="project_check_line_id" domain="[('activity_type_id', '=', project_act_type_id)]" attrs="{'readonly': [('status', '!=', 'draft')]}"/> -->
                            <field name="project_rating"/>
                        </group>
                        <group>
                            <field name="project_create_date" attrs="{'readonly': [('status', '!=', 'draft')]}"/>
                            <field name="project_responsible" attrs="{'readonly': [('status', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="cre_nc" />
                            <field name="cre_yellow" />
                            <field name="cre_orange"/>
                            <field name="cre_red"/>
                            <field name="cre_Green"/>
                            <field name="bar_chart_image" widget="image" class="oe_avatar" filename="filename" invisible="1"/>
                            <field name="pie_chart_image" widget="image" class="oe_avatar" filename="filename" invisible="1"/>
                            <field name="combined_chart_image" widget="image" class="oe_avatar" filename="filename" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <separator string="Checker/Approver Remarks"/>
                                <field name="description"/></group>
                            <group><separator string="Maker Remarks"/>
                                <field name="overall_remarks"/></group>
                    </group>
                    <group>
                            <separator string="Approver's Remark"/>
                                <field name="approver_remark"/></group>
                    <group>
                            <group string="Checker/Approver Image">
                                <field name="rectified_image_ids" nolabel="1" colspan="2">
                                    <tree editable="bottom">
                                        <field name="rectified_image" widget="image" options="{'size': [90, 90]}"/>
                                        <field name="filename" required="1"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="filename" required="1"/>
                                                </group>
                                                <group>
                                                    <field name="rectified_image" widget="image" 
                                                           options="{'size': [400, 300]}" 
                                                           class="oe_avatar"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </group>

                            <group string="Maker Image">
                                <field name="image_ids" nolabel="1" colspan="2">
                                    <tree editable="bottom">
                                        <field name="image" widget="image" options="{'size': [90, 90]}"/>
                                        <field name="filename" required="1"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="filename" required="1"/>
                                                </group>
                                                <group>
                                                    <field name="image" widget="image" 
                                                           options="{'size': [400, 300]}" 
                                                           class="oe_avatar"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </group>
                            <group string="Approver Reject Image">
                                <field name="approver_image_ids" nolabel="1" colspan="2">
                                    <tree editable="bottom">
                                        <field name="approver_image" widget="image"
                                            options="{'size': [90, 90]}"/>
                                        <field name="filename" required="1"/>
                                    </tree>

                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="filename" required="1"/>
                                                    <field name="description"/>
                                                    <field name="closed_by" readonly="1"/>
                                                    <field name="closed_date" readonly="1"/>
                                                </group>
                                                <group>
                                                    <field name="approver_image" widget="image"
                                                        class="oe_avatar"
                                                        options="{'size': [400, 300]}"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </group>
                            <group string="Approver Close Images">
                                <field name="approver_close_image_ids" nolabel="1" colspan="2">
                                    <tree editable="bottom">
                                        <field name="approver_close_img" widget="image"
                                            options="{'size': [90, 90]}"/>
                                        <field name="filename" required="1"/>
                                    </tree>

                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="filename" required="1"/>
                                                    <field name="description"/>
                                                    <field name="approved_by" readonly="1"/>
                                                    <field name="approved_date" readonly="1"/>
                                                </group>
                                                <group>
                                                    <field name="approver_close_img" widget="image"
                                                        class="oe_avatar"
                                                        options="{'size': [400, 300]}"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </group>

                        <!-- <group string="Rectified Image"> -->
                            <!-- <div style="margin-left:350px;">
