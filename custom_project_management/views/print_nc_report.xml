<odoo>
    <template id="report_manually_nc">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                    body {
                        padding: auto;
                        margin: auto;
                        width: 95%;
                    }
                    .no-border {
                        width: 30%;
                        padding: 2px;
                    }

                    .header {
                        font-size: 20px;
                        width: 70%;
                        font-weight: bold;
                        text-align: center;
                        background-color: #f4f4f4;                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            <!-- border-bottom: 1px solid black; -->
                        border-left: none;
                    }
                    .heading {
                        padding: auto 0px;
                        width: 65%;
                        text-align: center;
                        font-size: 20px;
                        font-weight: bold;
                        border-bottom: 1px solid black;
                    }
                    .seq {
                        width: 35%;
                        border-bottom: 0.5px solid black;
                    }
                    .table {
                        width: 100%;
                        border-collapse: collapse;
                    }
                    .table td, .table th {
                        border: 0.5px solid black;
                        padding: 8px;
                        text-align: left;
                        width: 25%;
                    }
                    .col-short {
                        width: 25%;
                    }
                    .col-wide {
                        width: 25%;
                    }
                    </style>

                    <table style="width: 100%; border-collapse: collapse; ">
                        <tr>
                            <td colspan="2" class="no-border">
                                <img src="/custom_project_management/static/description/logo_vb.png" alt="Logo" width="90%" style="margin-left: 10px;"/>
                            </td>
                            <td colspan="8" class="header">SHREE VENKATESH BUILDCON</td>
                        </tr>
                    </table>

                    <div class="page">
                        <!-- <table style="width: 100%; border-collapse: collapse; height: 10px;">
                            <tr>
                                <td class="heading" rowspan="2" style="border-right: 0.5px solid black; border-bottom: none; padding-top: 10px;">
                                    <span>
                                        <t t-esc="o.flag_category"/>
                                    </span>
                                    <span>Report</span>
                                </td>
                                <td class="seq" style="padding-left: 3px">
                                    <span>Sequence No:</span>
                                    <t t-esc="o.seq_number"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="seq" style="border-bottom: 0.5px solid black; margin-top: 0px;padding-top:0px; padding-left: 3px">
                                    <span>Date:</span>
                                    <t t-esc="o.project_create_date"/>
                                </td>
                            </tr> -->
                        <!-- </table> -->
                        <table style="width: 100%; border-collapse: collapse; height: 10px;">
                            <tr>
                                <td class="heading" rowspan="2" style="border-right: 0.5px solid black; border-bottom: none; padding-top: 20px;">
                                    <span>
                                        <t t-esc="o.flag_category"/>
                                    </span>
                                    <span> Report</span>
                                </td>
                                <td class="seq" style="padding: 5px; vertical-align: top;">
                                    <span>
                                        <strong>Sequence No:</strong>
                                    </span>
                                    <span style="padding-top: 5px;">
                                        <t t-esc="o.seq_number" />
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="seq" style="border-bottom: 0.5px solid black; padding: 5px; vertical-align: top;">
                                    <span>
                                        <strong>Date:</strong>
                                    </span>
                                    <span style="padding-top: 5px;">
                                        <t t-esc="o.project_create_date"/>
                                    </span>
                                </td>
                            </tr>
                        </table>

                        <table class="table">
                            <!-- <colgroup>
                                <col class="col-short" />
                                <col class="col-wide" />
                                <col class="col-short" />
                                <col class="col-wide" />
                            </colgroup> -->
                            <tr>
                                <td style="border-top:0.5px solid black;">Project Info</td>
                                <td style="border-top:0.5px solid black;">
                                    <t t-esc="o.project_info_id.name"/>
                                </td>
                                <td style="border-top:0.5px solid black;">Project Activity</td>
                                <td style="border-top:0.5px solid black;">
                                    <t t-esc="o.project_activity_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border-bottom: none;">Project Tower</td>
                                <td>
                                    <t t-esc="o.project_tower_id.name"/>
                                </td>
                                <td>Project Activity Type</td>
                                <td>
                                    <t t-esc="o.project_act_type_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border-bottom: none;">Project Floor</td>
                                <td>
                                    <t t-esc="o.project_floor_id.name"/>
                                </td>
                                <td>Project Checkline</td>
                                <td>
                                    <t t-esc="o.project_check_line_id.checklist_id.name"/>
                                </td>
                            </tr>
                              <tr>
                                <td style="border-bottom: none;">Project Flat</td>
                                <td>
                                    <t t-esc="o.project_flats_id.name"/>
                                </td>
                                <td>Rating</td>
                                <td>
                                    <t t-if="o.project_rating">
                                        <t t-esc="o.project_rating"/>
                                    </t>
                                    <t t-else="">
                                        <span>0.0</span>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td style=" border-bottom: none;">Project Responsible</td>
                                <td>
                                    <t t-esc="o.project_responsible.name"/>
                                </td>
                                <td>Description</td>
                                <td>
                                    <t t-esc="o.description"/>
                                </td>
                            </tr>
                            <tr>
                                <td >Rectified Image</td>
                                <td>
                                    <t t-if="o.rectified_image">
                                        <img t-att-src="image_data_uri(o.rectified_image)" style="max-width: 200px;
                    max-height: 300px;
                    display: block;
                    margin: 0 auto;" alt="Rectified Image"/>
                                    </t>
                                </td>
                                <td>Image</td>
                                <td>
                                    <t t-if="o.image">
                                        <img t-att-src="image_data_uri(o.image)" style="max-width: 200px;
                    max-height: 300px;
                    display: block;
                    margin: 0 auto;" alt="Image"/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <record id="print_custom_pf_nc" model="report.paperformat">
        <field name="name">DW Paper Format</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <!-- <field name="page_height">0</field>
                <field name="page_width">0</field> -->
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">80</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_nc" model="ir.actions.report">
        <field name="name">Manually NC Report</field>
        <field name="model">manually.set.flag</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_project_management.report_manually_nc</field>
        <field name="report_file">custom_project_management.report_manually_nc</field>
        <field name="print_report_name">"Status Report - %s" % (object.project_info_id.name)</field>
        <field name="paperformat_id" ref="custom_project_management.print_custom_pf_nc"/>
        <field name="binding_model_id" ref="custom_project_management.model_manually_set_flag"/>
        <field name="binding_type">report</field>
    </record>
</odoo>