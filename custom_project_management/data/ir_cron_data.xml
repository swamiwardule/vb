        <record id="cron_auto_flag_update" model="ir.cron">
            <field name="name">Auto Flag Updater</field>
            <field name="model_id" ref="model_manually_set_flag"/>
            <field name="state">code</field>
            <field name="code">model.scheduler_update_flags()</field>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>
    </data>

</odoo>
