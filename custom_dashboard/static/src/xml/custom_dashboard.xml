<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="DashboardMain">
        <div class="oh_dashboards">
            <div class="container-fluid o_hr_dashboard"/>
        </div>
    </t>
    <t t-name="DashboardCountDiv">
        <h2 class="section-header text-center" style="font-size: 2em; margin-left: 30px; padding-top: 10px; color:#4a5c9a;">Dashboard</h2><br/>
<div class="d-flex justify-content-center flex-wrap">
    <div class="col-sm-1 stat-card-d" id="all_project">
        <div class="oh-div-card stat-widget">
            <div class="stat-content">
                <div class="stat-icon"><i class="fa fa-tasks"></i></div>
                <div class="stat-text">Projects</div>
                <div class="stat-digit"><t t-esc="widget.total_project"/></div>
            </div>
        </div>
    </div>

    <div class="col-sm-1 stat-card-d" id="all_towers">
        <div class="oh-div-card stat-widget">
            <div class="stat-content">
                <div class="stat-icon"><i class="fa fa-building"></i></div>
                <div class="stat-text">Towers</div>
                <div class="stat-digit"><t t-esc="widget.total_tower"/></div>
            </div>
        </div>
    </div>

    <div class="col-sm-1 stat-card-d" id="all_floors">
        <div class="oh-div-card stat-widget">
            <div class="stat-content">
                <div class="stat-icon"><i class="fa fa-building"></i></div>
                <div class="stat-text">Floors</div>
                <div class="stat-digit"><t t-esc="widget.total_floors"/></div>
            </div>
        </div>
    </div>

    <div class="col-sm-1 stat-card-d" id="all_flats">
        <div class="oh-div-card stat-widget">
            <div class="stat-content">
                <div class="stat-icon"><i class="fa fa-home"></i></div>
                <div class="stat-text">Flats</div>
                <div class="stat-digit"><t t-esc="widget.total_flats"/></div>
            </div>
        </div>
    </div>

    <div class="col-sm-1 stat-card-d">
        <div class="oh-div-card stat-widget">
            <div class="stat-content">
                <div class="stat-icon"><i class="fa fa-flag"></i></div>
                <div class="stat-text">NC</div>
                <div class="stat-digit"><t t-esc="widget.total_nc_count"/></div>
            </div>
        </div>
    </div>

    <div class="col-sm-1 stat-card-d">
        <div class="oh-div-card stat-widget">
            <div class="stat-content">
                <div class="stat-icon"><i class="fa fa-flag"></i></div>
                <div class="stat-text">Green Cards</div>
                <div class="stat-digit"><t t-esc="widget.total_green_flag_count"/></div>
            </div>
        </div>
    </div>

    <div class="col-sm-1 stat-card-d">
        <div class="oh-div-card stat-widget">
            <div class="stat-content">
                <div class="stat-icon"><i class="fa fa-flag"></i></div>
                <div class="stat-text">Orange Cards</div>
                <div class="stat-digit"><t t-esc="widget.total_orange_flag_count"/></div>
            </div>
        </div>
    </div>

    <div class="col-sm-1 stat-card-d">
        <div class="oh-div-card stat-widget">
            <div class="stat-content">
                <div class="stat-icon"><i class="fa fa-flag"></i></div>
                <div class="stat-text">Yellow Cards</div>
                <div class="stat-digit"><t t-esc="widget.total_yellow_flag_count"/></div>
            </div>
        </div>
    </div>

    <div class="col-sm-1 stat-card-d">
        <div class="oh-div-card stat-widget">
            <div class="stat-content">
                <div class="stat-icon"><i class="fa fa-flag"></i></div>
                <div class="stat-text">Red Cards</div>
                <div class="stat-digit"><t t-esc="widget.total_red_flag_count"/></div>
            </div>
        </div>
    </div>
</div>
    </t>

    <t t-name="Dashboard">
        <div class="row main-section" style="margin-top:40px;">
<!--            <div class="row main-section" style="margin-top: 20;">-->
<!--                <div class="form-group">-->
<!--                    <label for="section_select">Select Section:</label>-->
<!--                    <select class="form-control" id="section_select">-->
<!--                        <option value="project">Select Projects/Towers/Floors/Flats</option>-->
<!--                        <option value="project">Projects</option>-->
