<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_dashboard_view_category" model="ir.module.category">
            <field name="name">Dashboard and Kanban View</field>
            <field name="description">Dashboard and Kanban View Category Group</field>
            <field name="sequence">2</field>
        </record>

        <record id="group_dashboard_access" model="res.groups">
            <field name="name">Dashboard Access Rights</field>
            <field name="category_id" ref="custom_dashboard.module_dashboard_view_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="project_info_kanban_view_only_rule" model="ir.rule">
            <field name="name">Kanban View Only Rule</field>
            <field name="model_id" ref="model_project_info"/>
            <field name="groups" eval="[(4, ref('custom_dashboard.group_dashboard_access'))]"/>
            <field name="domain_force">[('id', '!=', False)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="project_info_kanban_action" model="ir.actions.act_window">
            <field name="name">Project Info Kanban</field>
            <field name="res_model">project.info</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="custom_project_management.project_info_kanban_view"/>
        </record>
    </data>
</odoo>